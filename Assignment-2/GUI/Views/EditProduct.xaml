<Window x:Class="GUI.Views.EditProduct"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI.Views"
        xmlns:vm="clr-namespace:GUI.ViewModels"
        mc:Ignorable="d"
        Title="EditProduct" Height="250" Width="300">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Label Content="Nazwa:" Margin="5" Grid.Row="0" Grid.Column="0"/>
        <Label Content="Cena:" Margin="5" Grid.Row="1" Grid.Column="0"/>
        <Label Content="Ciężar:" Margin="5" Grid.Row="2" Grid.Column="0"/>
        <Label Content="Numer produktu:" Margin="5" Grid.Row="3" Grid.Column="0"/>

        <TextBox Name="nameText" Margin="5" Grid.Row="0" Grid.Column="1" Width="100"
                 Text="{Binding UpdatedProduct.Name, UpdateSourceTrigger=PropertyChanged}">
        </TextBox>
        <TextBox Name="priceText" Margin="5" Grid.Row="1" Grid.Column="1" Width="100"
                 Text="{Binding UpdatedProduct.ListPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </TextBox>
        <TextBox Name="weightText" Margin="5" Grid.Row="2" Grid.Column="1" Width="100" 
                 Text="{Binding UpdatedProduct.Weight, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </TextBox>
        <TextBox Name="productNumberText" Margin="5" Grid.Row="3" Grid.Column="1" Width="100" 
                 Text="{Binding UpdatedProduct.ProductNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
        </TextBox>

        <Button Content="Zapisz" Margin="15" Grid.Row="7" Grid.Column="0" Width="100" Click="ClickButton" Command="{Binding EditProductCommand}"/>
        <Button Content="Anuluj" Margin="15" Grid.Row="7" Grid.Column="1" Width="100" Click="ClickButton"/>
    </Grid>
</Window>
