<Window x:Class="GUI.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        xmlns:v="clr-namespace:GUI.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">

    <Window.Resources>
        <DataTemplate x:Key="ProductsList">
            <v:ProductsList/>
        </DataTemplate>
        <DataTemplate x:Key="ReviewsList">
            <v:ReviewsList/>
        </DataTemplate>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="250" />
            <RowDefinition Height="10" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <ContentControl ContentTemplate="{StaticResource ProductsList}" Grid.Column="0" Grid.Row="0" />
        <Separator Grid.Column="0" Grid.Row="1"/>
        <ContentControl ContentTemplate="{StaticResource ReviewsList}" Grid.Column="0" Grid.Row="2" />
    </Grid>
</Window>
